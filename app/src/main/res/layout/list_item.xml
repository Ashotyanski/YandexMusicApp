<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dip"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:id="@+id/listCover"
        android:layout_margin="25dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/listName"
        android:layout_alignTop="@+id/listCover"
        android:layout_toRightOf="@+id/listCover"
        android:layout_toEndOf="@+id/listCover" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genres"
        android:id="@+id/listGenres"
        android:layout_below="@+id/listName"
        android:layout_toRightOf="@+id/listCover"
        android:layout_toEndOf="@+id/listCover" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repertoire"
        android:id="@+id/listRepertoire"
        android:layout_alignBottom="@+id/listCover"
        android:layout_toRightOf="@+id/listCover"
        android:layout_toEndOf="@+id/listCover" />

</RelativeLayout>
